<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:drawableLeft="@drawable/ic_round_admin_panel_settings_24"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin"/>
            <TextView
                android:paddingLeft="5dp"
                android:padding="5dp"
                android:background="@color/teal_700"
                android:id="@+id/txt_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@font/comfortaa_light"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <ImageView
                android:padding="3dp"
                android:background="#C0C0C0"
                android:layout_gravity="center"
                android:id="@+id/img_information"
                android:src="@mipmap/ic_itlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa_light"
                android:id="@+id/txt_info_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="date"/>
            <TextView
                android:padding="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:id="@+id/txt_info_description"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>